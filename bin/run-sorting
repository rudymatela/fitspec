#!/bin/bash
#
# It takes about 20m to run on an Intel i7 2.20GHz (zero)

BINDIR=`dirname $0`
BENCH=$BINDIR/bench

$BENCH sorting -ebool -m400  -n400    -vr4
$BENCH sorting -ebool -m1000 -n1000   -vr4

$BENCH sorting -ew1 -m1000 -n1000   -vr4
$BENCH sorting -ew1 -m4000 -n4000   -vr4

$BENCH sorting -ew2 -m1000 -n1000   -vr4
$BENCH sorting -ew2 -m4000 -n4000   -vr4

$BENCH sorting -ew3 -m4000 -n4000   -vr4
$BENCH sorting -ew3 -m4000 -n10000  -vr4
$BENCH sorting -ew3 -m4000 -n40000  -vr4
$BENCH sorting -ew3 -m4000 -n100000 -vr4

$BENCH sorting -eint  -m4000 -n4000   -vr4
$BENCH sorting -eint  -m4000 -n10000  -vr4
$BENCH sorting -eint  -m4000 -n40000  -vr4
$BENCH sorting -eint  -m4000 -n100000 -vr4
